{
  "compilerOptions": {
    "downlevelIteration": true,
    "importHelpers": true,
    "strict": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "baseUrl": "./",
    "paths": {
      "tslib": ["path/to/node_modules/tslib/tslib.d.ts"]
    },
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "allowSyntheticDefaultImports": true
  }
}
